{
  "mappings": [
    {
      "request": {
        "method": "GET",
        "urlPattern": "/properties/.*"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "jsonBody": {
          "id": "{{request.pathSegments.[1]}}",
          "name": "Hotel Example",
          "address": "123 Main St, City",
          "coordinates": {
            "latitude": 40.7128,
            "longitude": -74.0060
          },
          "facilities": ["WiFi", "Pool"],
          "photos": ["photo1.jpg"],
          "currency": "USD",
          "check_in_time": "15:00",
          "check_out_time": "11:00"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPattern": "/properties/.*/rooms.*"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "jsonBody": {
          "rooms": [
            {
              "id": "101",
              "type": "Standard",
              "price": 150,
              "currency": "USD",
              "occupancy": {
                "adults": 2,
                "children": 0
              },
              "min_stay_arrival": 3,
              "taxes": [{"type": "city_tax", "amount": 5.50}],
              "cancellation_policy": null
            },
            {
              "id": "102",
              "type": "Deluxe",
              "price": 200,
              "currency": "USD",
              "occupancy": {
                "adults": 3,
                "children": 1
              },
              "min_stay_arrival": 2,
              "taxes": [],
              "cancellation_policy": null
            }
          ]
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPattern": "/properties/.*/closed_dates"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "jsonBody": {
          "closed_dates": [
            {
              "date": "2024-12-24",
              "closed_to_arrival": true,
              "closed_to_departure": false
            },
            {
              "date": "2024-12-31",
              "closed_to_arrival": false,
              "closed_to_departure": true
            }
          ]
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPattern": "/properties/timeout/.*"
      },
      "response": {
        "status": 200,
        "fixedDelayMilliseconds": 10000
      }
    }
  ]
}